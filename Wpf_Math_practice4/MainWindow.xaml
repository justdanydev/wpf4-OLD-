<Window x:Class="WpfMath4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMath4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Практическая работа #4 - Панфилов А.Д.:" Height="33" Width="348" FontSize="18" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите номер задания:" Margin="0,0,0,10"/>
            <TextBox x:Name="TaskNumberTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Вычислить" Click="CalculateButton_Click" Width="100" Margin="0,0,0,10"/>
            <TextBlock x:Name="ResultTextBlock" Text="Результаты:" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
